{
   "$schema": "https://json.schemastore.org/tsconfig",
   "display": "Node 21",

   "extends": "./base.json",

   "compilerOptions": {
     "lib": ["es2023"],
     "module": "nodenext",
     "target": "es2022",
 
     "strict": true,
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "forceConsistentCasingInFileNames": true,
     "skipLibCheck": true,
     "moduleResolution": "node16"
   }
 }