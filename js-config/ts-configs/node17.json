{
   "$schema": "https://json.schemastore.org/tsconfig",
   "display": "Node 17",

   "extends": "./base.json",

   "compilerOptions": {
     "lib": ["es2022"],
     "module": "node16",
     "target": "es2022",

     "strict": true,
     "esModuleInterop": true,
     "resolveJsonModule": true,
     "forceConsistentCasingInFileNames": true,
     "skipLibCheck": true,
     "moduleResolution": "node16"
   }
 }